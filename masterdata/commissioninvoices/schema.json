{
  "$schema": "http://json-schema.org/schema#",
  "title": "CommissionInvoice",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": ["partial", "unpaid", "paid"]
    },
    "invoiceCreateDate": {
      "type": "string"
    },
    "invoiceDueDate": {
      "type": "string"
    },
    "sellerData": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "contact": {
          "type": "object",
          "properties": {
            "phone": {
              "type": ["string", "null"]
            },
            "email": {
              "type": "string"
            }
          }
        },
        "address": {
          "type": "object",
          "properties": {
            "postalCode": {
              "type": ["string", "null"]
            },
            "city": {
              "type": ["string", "null"]
            },
            "state": {
              "type": ["string", "null"]
            },
            "country": {
              "type": ["string", "null"]
            },
            "street": {
              "type": ["string", "null"]
            },
            "number": {
              "type": ["string", "null"]
            }
          }
        },
        "comment": {
          "type": "string"
        }
      }
    },
    "orders": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "orderId": {
            "type": "string"
          },
          "totalComission": {
            "type": "number"
          },
          "totalOrderValue": {
            "type": "number"
          },
          "totalOrderRate": {
            "type": ["number", "null"]
          }
        }
      }
    },
    "totalizers": {
      "type": "object",
      "properties": {
        "subtotal": {
          "type": "number"
        },
        "fee": {
          "type": ["number", "null"]
        },
        "total": {
          "type": "number"
        }
      }
    }
  },
  "v-indexed": ["id", "status", "invoiceCreateDate", "invoiceDueDate"],
  "v-cache": false,
  "v-security": {
    "publicJsonSchema": true,
    "allowGetAll": true,
    "publicRead": ["id", "status", "invoiceCreateDate", "invoiceDueDate"],
    "publicWrite": ["status", "invoiceCreateDate", "invoiceDueDate"],
    "publicFilter": ["id", "status", "invoiceCreateDate", "invoiceDueDate"]
  }
}
